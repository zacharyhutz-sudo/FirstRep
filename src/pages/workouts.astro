---
import Layout from '../layouts/Layout.astro';
---

<Layout title="FirstRep - Workouts">
	<main class="max-w-md mx-auto px-6 py-12 pb-32">
		<header class="mb-10 text-center">
			<h1 class="text-3xl font-black text-white italic tracking-tighter">WORKOUTS</h1>
			<p class="text-gray-500 text-xs font-bold uppercase tracking-widest mt-1">Train with Purpose</p>
		</header>

		<div class="grid gap-4">
			<!-- Planner -->
			<a href="/FirstRep/planner" class="group relative overflow-hidden bg-indigo-600 rounded-3xl p-8 transition-all hover:scale-[1.02] active:scale-95 shadow-lg shadow-indigo-500/20">
				<div class="relative z-10">
					<h2 class="text-2xl font-black text-white">AI Planner</h2>
					<p class="text-indigo-200 text-sm font-medium mt-1">Custom routines built for you.</p>
				</div>
				<div class="absolute right-[-10%] top-[-20%] text-indigo-500/20 group-hover:text-indigo-400/20 transition-colors">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-40 w-40" fill="currentColor" viewBox="0 0 20 20">
						<path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
						<path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
					</svg>
				</div>
			</a>

			<!-- Saved Workouts -->
			<a href="/FirstRep/saved-workouts" class="group relative overflow-hidden bg-gray-900 border border-gray-800 rounded-3xl p-8 transition-all hover:scale-[1.02] active:scale-95">
				<div class="relative z-10">
					<h2 class="text-2xl font-black text-white">Saved Plans</h2>
					<p class="text-gray-500 text-sm font-medium mt-1">Access your personalized routines.</p>
				</div>
				<div class="absolute right-[-10%] top-[-20%] text-gray-800/50">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-40 w-40" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
					</svg>
				</div>
			</a>

			<!-- Library -->
			<a href="/FirstRep/library" class="group relative overflow-hidden bg-gray-900 border border-gray-800 rounded-3xl p-8 transition-all hover:scale-[1.02] active:scale-95">
				<div class="relative z-10">
					<h2 class="text-2xl font-black text-white">Library</h2>
					<p class="text-gray-500 text-sm font-medium mt-1">Browse all available exercises.</p>
				</div>
				<div class="absolute right-[-10%] top-[-20%] text-gray-800/50">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-40 w-40" fill="currentColor" viewBox="0 0 20 20">
						<path d="M9 4.804A7.993 7.993 0 002 12a7.993 7.993 0 007 7.196V4.804zM11 4.804v14.392A7.993 7.993 0 0018 12a7.993 7.993 0 00-7-7.196z" />
					</svg>
				</div>
			</a>
		</div>
	</main>

	<!-- Nav Bar -->
	<nav class="fixed bottom-0 left-0 right-0 bg-black/80 backdrop-blur-xl border-t border-gray-800 px-6 py-3 flex justify-around items-center z-50">
		<a href="/FirstRep/" class="flex flex-col items-center gap-1 text-gray-500">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
			</svg>
			<span class="text-[10px] font-bold">Home</span>
		</a>
		<a href="/FirstRep/workouts" class="flex flex-col items-center gap-1 text-indigo-500">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
				<path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
				<path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
			</svg>
			<span class="text-[10px] font-bold">Workouts</span>
		</a>
		<a href="/FirstRep/macros" class="flex flex-col items-center gap-1 text-gray-500">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
			</svg>
			<span class="text-[10px] font-bold">Macros</span>
		</a>
	</nav>
</Layout>

---
import Layout from '../layouts/Layout.astro';
---

<Layout title="FirstRep - Performance Dashboard">
	<main class="max-w-md mx-auto px-6 py-8 pb-32">
		<!-- Header / Greeting -->
		<header class="flex justify-between items-end mb-8">
			<div>
				<p id="today-date" class="text-[10px] font-black text-indigo-400 uppercase tracking-[0.2em] mb-1">Thursday, Feb 19</p>
				<h1 class="text-3xl font-black text-white italic tracking-tighter">Summary</h1>
			</div>
			<a href="/FirstRep/profile/" class="w-10 h-10 rounded-full bg-gray-900 border border-gray-800 flex items-center justify-center overflow-hidden hover:border-indigo-500/50 transition active:scale-90">
				<div class="w-full h-full bg-gradient-to-br from-indigo-500/20 to-purple-500/20 flex items-center justify-center text-indigo-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
					</svg>
                </div>
			</a>
		</header>

		<!-- Main Dashboard Bento Grid -->
		<div class="grid grid-cols-2 gap-4 mb-8">
			<!-- Calories Progress Card -->
			<div class="col-span-1 bg-gray-900 border border-gray-800 rounded-[2rem] p-5 flex flex-col justify-between relative overflow-hidden group">
				<div class="relative z-10">
					<p class="text-[10px] font-black text-gray-500 uppercase tracking-widest mb-4">Calories</p>
					<div class="flex items-end gap-1">
						<h3 id="display-cals" class="text-3xl font-black text-white leading-none">0</h3>
						<span class="text-[10px] text-gray-600 font-bold uppercase mb-1">/ <span id="target-cals">2500</span></span>
					</div>
				</div>
                <!-- Mini Ring -->
                <div class="absolute right-[-10px] top-[-10px] opacity-10 group-hover:opacity-20 transition-opacity">
                    <svg class="w-24 h-24 -rotate-90">
                        <circle cx="48" cy="48" r="38" stroke="currentColor" stroke-width="8" fill="transparent" class="text-gray-700"/>
                        <circle id="ring-cals" cx="48" cy="48" r="38" stroke="currentColor" stroke-width="8" fill="transparent" stroke-dasharray="238.7" stroke-dashoffset="238.7" class="text-indigo-500 transition-all duration-1000"/>
                    </svg>
                </div>
			</div>

			<!-- Protein Progress Card -->
			<div class="col-span-1 bg-gray-900 border border-gray-800 rounded-[2rem] p-5 flex flex-col justify-between relative overflow-hidden group">
				<div class="relative z-10">
					<p class="text-[10px] font-black text-gray-500 uppercase tracking-widest mb-4">Protein</p>
					<div class="flex items-end gap-1">
						<h3 id="display-protein" class="text-3xl font-black text-white leading-none">0<span class="text-sm">g</span></h3>
						<span class="text-[10px] text-gray-600 font-bold uppercase mb-1">/ <span id="target-protein">180</span>g</span>
					</div>
				</div>
                <!-- Mini Ring -->
                <div class="absolute right-[-10px] top-[-10px] opacity-10 group-hover:opacity-20 transition-opacity">
                    <svg class="w-24 h-24 -rotate-90">
                        <circle cx="48" cy="48" r="38" stroke="currentColor" stroke-width="8" fill="transparent" class="text-gray-700"/>
                        <circle id="ring-protein" cx="48" cy="48" r="38" stroke="currentColor" stroke-width="8" fill="transparent" stroke-dasharray="238.7" stroke-dashoffset="238.7" class="text-green-500 transition-all duration-1000"/>
                    </svg>
                </div>
			</div>

            <!-- Workout Status Card (Wide) -->
			<div class="col-span-2 bg-indigo-600 rounded-[2rem] p-6 relative overflow-hidden shadow-xl shadow-indigo-500/20 active:scale-[0.98] transition cursor-pointer group">
                <a href="/FirstRep/workouts" class="absolute inset-0 z-20"></a>
                <div class="relative z-10 flex justify-between items-center">
                    <div>
                        <p class="text-[10px] font-black text-indigo-200 uppercase tracking-[0.2em] mb-1">Today's Session</p>
                        <h2 id="active-workout-name" class="text-2xl font-black text-white italic tracking-tight">Push Day A</h2>
                        <div class="flex gap-4 mt-4">
                            <div class="flex items-center gap-1.5">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-indigo-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span class="text-xs font-bold text-indigo-100">45 Min</span>
                            </div>
                            <div class="flex items-center gap-1.5">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-indigo-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                </svg>
                                <span class="text-xs font-bold text-indigo-100">6 Exercises</span>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white text-indigo-600 w-12 h-12 rounded-full flex items-center justify-center shadow-lg group-hover:scale-110 transition">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-1" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
                <!-- Abstract BG element -->
                <div class="absolute right-[-5%] bottom-[-20%] text-white/10 rotate-12">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
                    </svg>
                </div>
			</div>
		</div>

		<!-- Quick Actions Pille -->
        <div class="flex gap-3 overflow-x-auto pb-6 -mx-6 px-6 no-scrollbar">
            <a href="/FirstRep/macros" class="flex-shrink-0 bg-gray-900 border border-gray-800 rounded-full px-6 py-3 flex items-center gap-2 active:scale-95 transition">
                <span class="text-indigo-400">ü•ó</span>
                <span class="text-xs font-black text-gray-200 uppercase tracking-widest">Log Food</span>
            </a>
            <a href="/FirstRep/weight" class="flex-shrink-0 bg-gray-900 border border-gray-800 rounded-full px-6 py-3 flex items-center gap-2 active:scale-95 transition">
                <span class="text-indigo-400">‚öñÔ∏è</span>
                <span class="text-xs font-black text-gray-200 uppercase tracking-widest">Log Weight</span>
            </a>
            <a href="/FirstRep/planner" class="flex-shrink-0 bg-gray-900 border border-gray-800 rounded-full px-6 py-3 flex items-center gap-2 active:scale-95 transition">
                <span class="text-indigo-400">üìÖ</span>
                <span class="text-xs font-black text-gray-200 uppercase tracking-widest">Planner</span>
            </a>
        </div>

        <!-- Weekly Activity List -->
        <div class="mt-4">
            <h3 class="text-xs font-black text-gray-500 uppercase tracking-widest mb-6">Recent Activity</h3>
            <div class="space-y-3">
                {[
                    { label: 'Yesterday', title: 'Pull Day B', status: 'Completed', color: 'text-green-400' },
                    { label: 'Feb 17', title: 'Upper Body Power', status: 'Completed', color: 'text-green-400' },
                    { label: 'Feb 16', title: 'Active Recovery', status: 'Skipped', color: 'text-gray-600' }
                ].map(item => (
                    <div class="bg-gray-900/40 border border-gray-800/50 p-4 rounded-2xl flex justify-between items-center">
                        <div>
                            <p class="text-[10px] font-black text-gray-600 uppercase tracking-tighter">{item.label}</p>
                            <p class="font-bold text-gray-300">{item.title}</p>
                        </div>
                        <span class={`text-[10px] font-black uppercase tracking-widest ${item.color}`}>{item.status}</span>
                    </div>
                ))}
            </div>
        </div>
	</main>

	<!-- Nav Bar (Native iOS Blur) -->
	<nav class="fixed bottom-0 left-0 right-0 bg-black/60 backdrop-blur-2xl border-t border-gray-800/50 px-6 py-3 flex justify-around items-center z-50">
		<a href="/FirstRep/" class="flex flex-col items-center gap-1 text-indigo-400">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
				<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
			</svg>
			<span class="text-[9px] font-black uppercase tracking-tighter">Home</span>
		</a>
		<a href="/FirstRep/workouts" class="flex flex-col items-center gap-1 text-gray-600 hover:text-gray-300">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
			</svg>
			<span class="text-[9px] font-black uppercase tracking-tighter">Log</span>
		</a>
		<a href="/FirstRep/macros" class="flex flex-col items-center gap-1 text-gray-600 hover:text-gray-300">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
			</svg>
			<span class="text-[9px] font-black uppercase tracking-tighter">Macros</span>
		</a>
	</nav>
</Layout>

<style>
    .no-scrollbar::-webkit-scrollbar { display: none; }
    .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>

<script>
	import { supabase } from '../lib/supabase';

	async function init() {
		const { data: { session } } = await supabase.auth.getSession();
		if (!session) {
			window.location.href = '/FirstRep/login/index.html';
			return;
		}

		const user = session.user;
		const today = new Date();
        const dateEl = document.getElementById('today-date');
        if (dateEl) {
            dateEl.innerText = today.toLocaleDateString('en-US', { weekday: 'long', month: 'short', day: 'numeric' });
        }

        // Fetch Profile for Goals
        const { data: profile } = await supabase.from('profiles').select('*').eq('id', user.id).maybeSingle();
        const targets = {
            calories: profile?.daily_goals?.calories || 2500,
            protein: profile?.daily_goals?.protein || 180
        };

        document.getElementById('target-cals').innerText = targets.calories;
        document.getElementById('target-protein').innerText = targets.protein;

		// Fetch Today's Food Logs
		const todayStr = today.toISOString().split('T')[0];
		const { data: logs } = await supabase
			.from('food_logs')
			.select('calories, protein')
			.eq('user_id', user.id)
			.eq('logged_at', todayStr);

		if (logs) {
			const totalCals = logs.reduce((acc, log) => acc + log.calories, 0);
			const totalPro = logs.reduce((acc, log) => acc + log.protein, 0);

			document.getElementById('display-cals').innerText = Math.round(totalCals).toString();
			document.getElementById('display-protein').innerHTML = `${Math.round(totalPro)}<span class="text-sm">g</span>`;

			// Update Rings
			const circum = 238.7; // 2 * PI * 38
			const calOffset = circum - (Math.min(totalCals / targets.calories, 1) * circum);
			const proOffset = circum - (Math.min(totalPro / targets.protein, 1) * circum);

			setTimeout(() => {
				const ringCals = document.getElementById('ring-cals');
				const ringPro = document.getElementById('ring-protein');
				if (ringCals) ringCals.style.strokeDashoffset = calOffset.toString();
				if (ringPro) ringPro.style.strokeDashoffset = proOffset.toString();
			}, 100);
		}

        // Fetch Active Workout Plan
        const { data: plan } = await supabase.from('workout_plans').select('*').eq('user_id', user.id).eq('is_active', true).maybeSingle();
        if (plan) {
            document.getElementById('active-workout-name').innerText = plan.plan_name;
        }
	}

	init();
</script>
